<!-- Modal -->
<div class="modal fade" id="registerModal" tabindex="-1">
  <div class="modal-dialog login-form" role="document">
    <div class="modal-content">
      <div class="modal-header" id="headerRegisterForm">
        <a class="form-close bounce" style="cursor:pointer" aria-label="Close" ><i class="fa fa-times fa-lg" dismiss="modal"></i></a>
        <h2 class="modal-title titleRegister"><span class="fa fa-sign-in"></span> Sign Up</h2>
      </div>
      <div class="messageR"></div>
      <div class="modal-body">
				<form id="formRegistro" name="formRegistro" action="/auth/signup" method="post">
					<div class="form-group">
						<label for="user" class="pull-left">Espol User</label>
						<input type="text" class="form-control" id="userR" pattern="[a-z]{5,20}" autofocus="autofocus" required>
					</div>
					<div class="form-group">
						<label for="password" class="pull-left">Espol Password</label>
						<input type="password" class="form-control" id="passwordR" pattern="[A-Za-z0-9]{6,20}" required>
					</div>
          <div class="form-group">
  					<p>Already have an account? <a style="cursor:pointer" data-dismiss="modal" data-toggle="modal" data-target="#loginModal" >Login</a></p>
  					<p>Or go <a style="cursor:pointer">home</a>.</p>
          </div>
				<hr>
				<button id="botonRegistrar" class="btn btn-primary btn-lg btn-block">Signup</button>
			</form>
			</div>
			<div class="modal-footer">
				<div class="col-md-12">
					<button type="submit" class="btn form-close" style="background-color: rgb(222, 226, 245);" data-dismiss="modal" aria-hidden="true">Close</button>
				</div>
			</div>
		</div>
	</div>
</div>
